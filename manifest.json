{
  "manifest_version": 3,
  "name": "Mute marketing signals",
  "version": "1.1",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://*.rsaweb.co.za/*"],

  "background": { "service_worker": "background.js" },

  "content_scripts": [
    {
      "matches": ["https://*.rsaweb.co.za/*"],
      "js": ["mute-marketing.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["page.js"],
      "matches": ["https://*.rsaweb.co.za/*"]
    }
  ],

  "action": {
    "default_icon": "icon.png"
  }
}
